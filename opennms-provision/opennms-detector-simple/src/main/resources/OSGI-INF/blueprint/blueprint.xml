<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
	xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.1.0"
	xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0 
		http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
		http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0
		http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.1.0.xsd
		http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.1.0
		http://aries.apache.org/schemas/blueprint-ext/blueprint-ext-1.1.xsd
">

    <bean id="bgpSessionDetectorFactory" class="org.opennms.netmgt.provision.detector.snmp.BgpSessionDetectorFactory" />
    <service ref="bgpSessionDetectorFactory" interface="org.opennms.netmgt.provision.ServiceDetectorFactory">
        <service-properties>
            <entry key="implementation" value="org.opennms.netmgt.provision.detector.snmp.BgpSessionDetector" />
        </service-properties>
    </service>

    <bean id="icmpDetectorFactory" class="org.opennms.netmgt.provision.detector.icmp.IcmpDetectorFactory" />
	<service ref="icmpDetectorFactory" interface="org.opennms.netmgt.provision.ServiceDetectorFactory">
		<service-properties>
			<entry key="implementation" value="org.opennms.netmgt.provision.detector.icmp.IcmpDetector" />
		</service-properties>
	</service>

    <bean id="loopDetectorFactory" class="org.opennms.netmgt.provision.detector.loop.LoopDetectorFactory" />
	<service ref="loopDetectorFactory" interface="org.opennms.netmgt.provision.ServiceDetectorFactory">
		<service-properties>
			<entry key="implementation" value="org.opennms.netmgt.provision.detector.loop.LoopDetector" />
		</service-properties>
	</service>

    <bean id="smbDetectorFactory" class="org.opennms.netmgt.provision.detector.smb.SmbDetectorFactory" />
    <service ref="smbDetectorFactory" interface="org.opennms.netmgt.provision.ServiceDetectorFactory">
        <service-properties>
            <entry key="implementation" value="org.opennms.netmgt.provision.detector.smb.SmbDetector" />
        </service-properties>
    </service>

    <bean id="snmpDetectorFactory" class="org.opennms.netmgt.provision.detector.snmp.SnmpDetectorFactory" />
    <service ref="snmpDetectorFactory" interface="org.opennms.netmgt.provision.ServiceDetectorFactory">
        <service-properties>
            <entry key="implementation" value="org.opennms.netmgt.provision.detector.snmp.SnmpDetector" />
        </service-properties>
    </service>
</blueprint>
